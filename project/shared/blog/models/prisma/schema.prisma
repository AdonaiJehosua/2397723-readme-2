generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id             String    @id @default(uuid()) @map("post_id")
  originalId     String?   @map("original_post_id")
  postType       String    @map("post_type")
  title          String?
  link           String?
  preview        String?
  text           String?
  author         String?
  photo          String?
  description    String?
  userId         String    @map("user_id")
  originalUserId String?   @map("original_user_id")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  isRepost       Boolean   @default(false) @map("is_repost")
  isPublished    Boolean   @default(true) @map("is_published")
  likes          String[]  @default([])
  tags           Tag[]
  comments       Comment[]

  @@index([userId])
  @@map("posts")
}

model Comment {
  id        String   @id @default(uuid()) @map("comment_id")
  text      String
  authorId  String   @map("user_id")
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postId    String   @map("post_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("comments")
}

model Tag {
  id    String @id @default(uuid()) @map("tag_id")
  title String @unique()
  posts Post[]

  @@map("tags")
}
